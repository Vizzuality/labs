<%= form_for(@installation, :html => {class: "form-horizontal"}) do |f| %>
  <% if @installation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@installation.errors.count, "error") %> prohibited this installation from being saved:</h2>

      <ul>
      <% @installation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :project_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select :project_id, Project.order(:title),:id,:title, 
        {prompt: "Select the project this Installation refers to"}, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :project_instance_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select :project_instance_id, ProjectInstance.order(:name),:id,:name,
        {prompt: "Select the instance this Installation refers to"}, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :server_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :server_id, Server.order(:name),:id,:name, 
        {prompt: "Select the server this Installation belongs to"}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :role, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :role, [["Web","Web"],["Database","Database"],["Web & Database","Web & Database"]], {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :stage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :stage, [["Staging", "Staging"],["Production", "Production"]], {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :branch, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :branch, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <% unless @installation.new_record? %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :closing %>
      </div>
      <div class="col-sm-offset-2 col-sm-10" style="margin: 10px 0px 0px 0px;">
        <%= f.check_box :closing, class: "inline" %>
        <p class="help-block">Select if retirement scheduled.</p>
      </div>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
    <% unless @installation.new_record? %>
      <% unless @installation.deleted? %>
        <%= link_to "Soft-Delete",
          {action: "soft_delete", id: @installation.id},
          method: :put, class: "btn btn-primary comment_btn", id: "soft_delete_btn", type: "button"
        %>
      <% else %>
        <%= link_to "Restore",
          {action: "restore", id: @installation.id},
          method: :put, class: "btn btn-primary comment_btn", id: "restore_btn", type: "button"
        %>
      <% end %>
    <% end %>
  </div>
<% end %>
