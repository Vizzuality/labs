<div class="page-header">
  <h1>Listing Soft-Deleted Installations</h1>
</div>

<div class="btn-group">
  <%= button_to 'Active Installations', installations_path, method: :get, class: "btn btn-primary" %>
</div>

<table class="table datatable" id="deleted_installations_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Server</th>
      <th>Role</th>
      <th>Stage</th>
      <th>Branch</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @installations.each do |installation| %>
      <tr>
        <td><%= installation.name %></td>
        <td><%= link_to installation.project.title, project_path(installation.project) %></td>
        <td><%= link_to installation.server.name, server_path(installation.server) %></td>
        <td><%= installation.role %></td>
        <td><%= installation.stage %></td>
        <td><%= installation.branch %></td>
        <td><%= link_to 'Show', installation %></td>
        <td><%= link_to 'Edit', edit_installation_path(installation) %></td>
        <td><%= link_to 'Destroy', installation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Restore', restore_installations_path(id: installation.id),
          method: :put, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot class="filters">
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </tfoot>
</table>

<br>