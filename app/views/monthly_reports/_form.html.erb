<%= form_for(@monthly_report, :html => {class: "form-horizontal"}) do |f| %>
  <% if @monthly_report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@monthly_report.errors.count, "error") %> prohibited this monthly_report from being saved:</h2>

      <ul>
      <% @monthly_report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :project_id %>

  <div class="form-group">
    <%= f.label :report_date, class: "col-sm-2 control-label" %>
