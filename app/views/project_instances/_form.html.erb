<%= form_for(@project_instance, :html => {class: "form-horizontal"}) do |f| %>
  <% if @project_instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project_instance.errors.count, "error") %> prohibited this instance from being saved:</h2>

      <ul>
      <% @project_instance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :project_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select :project_id, Project.order(:title),:id,:title, 
        {prompt: "Select the project this Instance refers to"}, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :backup_information, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :backup_information, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :stage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :stage, [["Staging", "Staging"],["Production", "Production"]], {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :branch, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :branch, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :installation_ids, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :installation_ids, Installation.includes(:project).
        order('projects.title'), :id, :name,
        {:selected => @project_instance.installation_ids},
        {class: "form-control", multiple: true}
      %>
      </div>
  </div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
