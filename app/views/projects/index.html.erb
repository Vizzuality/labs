<div class="page-header">
  <!-- <h1>Our recent projects</h1> -->
	<h1>We make excellent tools to explain and explore the value of the world's natural resources.</h1>
  <br>
	<h4>
		Some of our recent projects are described below. If you want to know any more, email 
		<a href="mailto:tim.wilkinson@unep-wcmc.org?subject=labs">Tim Wilkinson</a>
	</h4>
</div>

<div class="row">
  <div class="span6">
    <% if user_signed_in? %>
      <%= button_to "Add a new Project", new_project_path, method: :get, class: 'btn primary' %>
    <% end %>
    &nbsp;
  </div>

  <div id="search-box" class="span6">
    <%= form_tag projects_path, :method => "get", class: 'form-search' do %>
      <%= text_field_tag "search", nil, placeholder: "Search projects..." %>
      <%= submit_tag "Search", class: 'btn primary' %>
    <% end %>
  </div>
</div>

<div class="row">
  <% if params[:search].present? %>
    <div class="span12 search-results-text">
      <h3>Showing <%= @projects.length %> <%= "project".pluralize @projects.length %> found matching "<%= params[:search] %>".</h3>
    </div>
  <% end %>
</div>

  <% unless @projects.length == 0 %>
    <div class="row">
    <% @projects.each_with_index do |project, i| %>
      <div class="span4 project <%= project_style project %>">
        <%= link_to project_preview(project), project.url %>
        <p>
          <h3><%= link_to project.title, project.url %></h3>
          <p><%= project.description %></p>
          <% if user_signed_in? %>
            <%= link_to "Show", project_path(project) %> | 
            <%= link_to "Edit", edit_project_path(project) %> | 
            <%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure you want to delete this project?"} %>
          <% end %>
        </p>
      </div>
    <%# Start a new row every third project, except if it's the last one %>
      <% if (i==@projects.length-1) %>
        <%= i %>
        First half
        </div>
      <% elsif (i!=0 && (i+1)%3==0) %>
      <%= i %>
        Second half
        </div>
        <div class="row">
      <% end %>
    <% end %>
  <% end %>
