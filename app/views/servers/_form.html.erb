<%= form_for(@server, :html => {class: "form-horizontal"}) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="field control-group">
    <%= f.label :domain, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :domain %>
    </div>
  </div>

  <div class="field control-group">
    <%= f.label :username, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="field control-group">
    <%= f.label :admin_url, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :admin_url %>
    </div>
  </div>

  <div class="field control-group">
    <%= f.label :os, class: "control-label" %>
    <div class="controls">
      <%= f.select :os, [["Windows", "Windows"],["Linux", "Linux"]] %>
    </div>
  </div>

  <div class="field control-group">
    <%= f.label :description, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn primary" %>
  </div>
<% end %>
