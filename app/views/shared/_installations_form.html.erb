<div class="form-group">
  <%= f.label :server_id, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.collection_select :server_id, Server.order(:name),:id,:name, 
      {prompt: "Select the server this Installation belongs to"}, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :role, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.select :role, [["Web","Web"],["Database","Database"],["Web & Database","Web & Database"]], {}, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :description, class: "form-control" %>
  </div>
</div>