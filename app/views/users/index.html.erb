<div class="page-header">
	<h1>Users</h1>
</div>

<table class="table">
	<thead>
		<tr>
			<th>Gravatar</th>
			<th>Github Username</th>
			<th>Last Login</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= image_tag gravatar user %></td>
				<td><%= user.github %></td>
				<td><%= user.current_sign_in_at.to_formatted_s(:long) %></td>
			</tr>
		<% end %>
	</tbody>
</table>